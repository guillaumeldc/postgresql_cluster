; 10.64.48.172
; 10.64.48.173
; 10.64.48.98
; 10.8.162.100
; 10.8.162.101
; 10.8.162.102

# if dcs_exists: false and dcs_type: "consul"
[consul_instances]  # recommendation: 3 or 5-7 nodes
# Datacenter: ddtc
10.64.48.171 consul_node_role=server consul_bootstrap_expect=true consul_datacenter=ddtc
10.64.48.172 consul_node_role=server consul_bootstrap_expect=true consul_datacenter=ddtc
10.64.48.173 consul_node_role=client consul_datacenter=ddtc

# if with_haproxy_load_balancing: true
[balancers]
10.64.48.171 balancer_tags="datacenter=ddtc"
10.64.48.172 balancer_tags="datacenter=ddtc"
10.64.48.173 balancer_tags="datacenter=ddtc"

# PostgreSQL nodes
[master]
10.64.48.171 hostname=DUKEPDPS45 postgresql_exists=false patroni_tags="datacenter=ddtc"

[replica]
10.64.48.172 hostname=DUKEPDPS46 postgresql_exists=false patroni_tags="datacenter=ddtc"
10.64.48.173 hostname=DUKEPDPS47 postgresql_exists=false patroni_tags="datacenter=ddtc"

[postgres_cluster:children]
master
replica

